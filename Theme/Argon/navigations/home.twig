{% for item in items %}
    <div class="col-xl-{{ item.col ? item.col : 3 }} col-sm-12 col-lg-{{ item.col ? item.col : 3 * 2 }} col-12">
        <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <h5 class="card-title text-uppercase text-muted mb-0">
                            {{ trans(item.name) }}</h5>
                        <span class="h2 font-weight-bold mb-0">{{ item.value }}</span>
                    </div>
                    <div class="col-auto">
                        <div class="icon icon-shape bg-gradient-{{ item.color }} text-white rounded-circle shadow">
                            <i class="{{ item.icon }}"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endfor %}
