{% for item in items %}

    <div class="col-xl-{{ item.col ? item.col : 3 }} col-sm-{{ item.col ? item.col : 3 * 2 }} mb-xl-0 mb-2 mt-2">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">{{ trans(item.name) }}</p>
                            <h5 class="font-weight-bolder">
                                {{ item.value }}
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-{{ item.color }} shadow-{{ item.color }} text-center rounded-circle">
                            <i class="{{ item.icon }} text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
