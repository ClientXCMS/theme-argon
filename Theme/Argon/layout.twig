{% set mail_messages = mail_messages() %}

{% include "includes/head.twig" with {title: block('title') } %}
<body>
{% include "includes/header.twig" with {title: block('title')} %}
<div class="col-12">
    {% if flash('success') %}
        <div class="alert alert-success">
            {{ flash('success') }}
        </div>
    {% endif %}
    {% if flash('error') %}
        <div class="alert alert-danger">
            {{ flash('error') }}
        </div>
    {% endif %}
    {% if flash('warning') %}
        <div class="alert alert-warning">
            {{ flash('warning') }}
        </div>
    {% endif %}
    {% if flash('info') %}
        <div class="alert alert-info">
            {{ flash('info') }}
        </div>
    {% endif %}
</div>
<div class="container-fluid">
    {% block body %}{% endblock %}
</div>
</section>

{% include "includes/footer.twig" %}
{% block scripts %}{% endblock %}
</body>
</html>
