{% block title trans("account.reset.title") %}
{% extends 'auth.twig' %}

{% block body %}
    <form action="{{ path('auth.password') }}" method="post">
        {% if flash('error') %}
            <div class="alert alert-danger">
                {{ flash('error') }}
            </div>
        {% endif %}

        {% if flash('success') %}
            <div class="alert alert-success">
                {{ flash('success') }}
            </div>
        {% endif %}

        {{ csrf_input() }}
        {{ field('email', null, trans("email"), {type: 'email'}) }}
        <div class="mt-3" style="text-align:center;">
            {{ recaptcha() }}
        </div>

            <button type="submit" class="btn btn-primary w-100 my-4 mb-2">
                {{ trans("account.reset.button") }}
            </button>
    </form>
{% endblock %}
